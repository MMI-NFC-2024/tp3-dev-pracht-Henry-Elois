---
import Layout from "../layouts/Layout.astro";
import GraphicSpecies from "../components/GraphicSpecies.astro";
import {
  Tabs,
  TabsList,
  TabsTab,
  TabsPanel,
} from "accessible-astro-components";
import penguins from "../assets/penguins.json";

const penguinsAdelie = penguins.filter((p) => p.species === "Adelie");
const penguinsGentoo = penguins.filter((p) => p.species === "Gentoo");
const penguinsChinstrap = penguins.filter((p) => p.species === "Chinstrap");
---

<Layout>
  <div class="!p-4">
    <h1 class="!text-2xl !font-bold mb-4">Navigation entre les espÃ¨ces</h1>

    <Tabs>
      <TabsList class="!flex !space-x-2 !mb-4 !border-b">
        <TabsTab
          id="adelie-tab"
          controls="adelie-panel"
          selected
          class="!text-black !bg-yellow-100 !rounded-t-lg !border !cursor-pointer hover:!bg-orange-300 focus:!outline-none focus:!text-yellow-100 focus:!bg-black aria-selected:!bg-black aria-selected:!text-yellow-100"
          >Adelie</TabsTab
        >
        <TabsTab
          id="gentoo-tab"
          controls="gentoo-panel"
          class="!text-black !bg-yellow-100 !rounded-t-lg !border !cursor-pointer hover:!bg-orange-300 focus:!outline-none focus:!text-yellow-100 focus:!bg-black aria-selected:!bg-black aria-selected:!text-yellow-100"
          >Gentoo</TabsTab
        >
        <TabsTab
          id="chinstrap-tab"
          controls="chinstrap-panel"
          class="!text-black !bg-yellow-100 !rounded-t-lg !border !cursor-pointer hover:!bg-orange-300 focus:!outline-none focus:!text-yellow-100 focus:!bg-black aria-selected:!bg-black aria-selected:!text-yellow-100"
          >Chinstrap</TabsTab
        >
      </TabsList>

      <TabsPanel
        id="adelie-panel"
        labelledby="adelie-tab"
        selected
        class="!p-6 !bg-blue-100 !border !border-gray-200 !rounded-b-lg !shadow-sm"
      >
        <h2 class="text-xl font-semibold mb-2">Les penguins Adelie</h2>
        <GraphicSpecies species="Adelie" />
      </TabsPanel>

      <TabsPanel
        id="gentoo-panel"
        labelledby="gentoo-tab"
        class="!p-6 !bg-blue-100 !border !border-gray-200 !rounded-b-lg !shadow-sm"
      >
        <h2 class="text-xl font-semibold mb-2">Gentoo</h2>
        <GraphicSpecies species="Gentoo" />
      </TabsPanel>

      <TabsPanel
        id="chinstrap-panel"
        labelledby="chinstrap-tab"
        class="!p-6 !bg-blue-100 !border !border-gray-200 !rounded-b-lg !shadow-sm"
      >
        <h2 class="text-xl font-semibold mb-2">Chinstrap</h2>
        <GraphicSpecies species="Chinstrap" />
      </TabsPanel>
    </Tabs>
  </div>
</Layout>
